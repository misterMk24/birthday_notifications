{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "moduleResolution": "Node",
  },
  "exclude": ["dist", "node_modules", "**/*.spec.ts"],
}
